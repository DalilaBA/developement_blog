<div class="container">

  <div class="row justify-content-center m-0">
      <div class="col-10">
  <%= render 'errors' %>

        <%= form_with(model: @article, class: "shadow p-3 mb-3 rounded", local: true) do |f| %>
        <div class="row">
            <%= f.label :title, class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_field :title, class: "form-control shadow-sm rounded", placeholder: "Title of article" %>
            </div>
          </div>
          <br>
          <div class="row">
            <%= f.label :description, class: "col-2 col-form-label" %>
            <div class="col-10"> 
              <%= f.text_area :description, rows: 10, class: "form-control shadow-sm rounded", placeholder: "Description of article" %>
            </div>
          </div>
          <br>
          <div class=" text-center">
            <%= f.submit class: "btn btn-primary" %>
            <%= link_to 'Cansel', articles_path, class: "btn btn-secondary ", type: "button" %>
          </div>
        <% end %>
      </div>
      
    </div>
  </div> 
</div>
