<h1 class="text-center mt-4">Log in</h1>
<div class="container">

  <div class="row justify-content-center m-0">
      <div class="col-lg-10 col-sm-12">
        <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 rounded", local: true) do |f| %>
          <div class="row">
            <%= f.label :email, class: "col-2 col-form-label" %>
            <div class="col-10"> 
              <%= f.email_field :email, class: "form-control shadow-sm rounded", placeholder: "Enter your email" %>
            </div>
          </div>
          <br>
          <div class="row">
            <%= f.label :password, class: "col-2 col-form-label" %>
            <div class="col-10"> 
              <%= f.password_field :password, class: "form-control shadow-sm rounded", placeholder: "Enter your password" %>
            </div>
          </div>
          <br>
          <div class=" text-center">
            <%= f.submit "Log in" ,class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
      
    </div>
  </div> 
</div>
