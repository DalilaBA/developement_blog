<div class="container">

  <div class="row justify-content-center m-0">
      <div class="col-lg-10 col-sm-12">
  <%= render 'shared/errors', obj: @user %>

        <%= form_with(model: @user, class: "shadow p-3 mb-3 rounded", local: true) do |f| %>
        <div class="row">
            <%= f.label :username, class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_field :username, class: "form-control shadow-sm rounded", placeholder: "Enter a username" %>
            </div>
          </div>
          <br>
          <div class="row">
            <%= f.label :email, class: "col-2 col-form-label" %>
            <div class="col-10"> 
              <%= f.email_field :email, class: "form-control shadow-sm rounded", placeholder: "Enter an email" %>
            </div>
          </div>
          <br>
          <div class="row">
            <%= f.label :password, class: "col-2 col-form-label" %>
            <div class="col-10"> 
              <%= f.password_field :password, class: "form-control shadow-sm rounded", placeholder: "Choose a password" %>
            </div>
          </div>
          <br>
          <div class=" text-center">
            <%= f.submit(@user.new_record? ? "Sign Up" : "update account" ,class: "btn btn-primary" )%>
            <%= link_to 'Cansel', articles_path, class: "btn btn-secondary ", type: "button" %>
          </div>
        <% end %>
      </div>
      
    </div>
  </div> 
</div>
