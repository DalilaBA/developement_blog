<h1 class="text-center mt-4">Users</h1>

<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-lg-8 mt-4 col-sm-12">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title"><%= link_to user.title, user_path(user), class: "text-success" %></h5>
            <p class="card-text"><%= truncate(user.description, length: 100) %></p>
            <%= link_to "View", user_path(user), class: "btn btn-outline-success" %>
            <%= link_to "Edit", edit_user_path(user), class: "btn btn-outline-info" %>
            <%= link_to "Delete", user_path(user), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
          </div>
          <div class="card-footer text-muted">
            <small> Created <%= time_ago_in_words(user.created_at) %> ago by<%= link_to user.username, user %>, 
            edited <%= time_ago_in_words(user.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>